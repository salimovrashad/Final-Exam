@model List<Service>
@{
    ViewData["Title"] = "Index";
}

<!-- Begin Page Content -->
<div class="container-fluid">

    <!-- Page Heading -->
    <h1 class="h3 mb-4 text-gray-800">Service Page</h1>
    <a class="btn btn-outline-primary" asp-action="Create" asp-controller="Service">Create</a>
    <table class="table">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">ImageUrl</th>
                <th scope="col">Name</th>
                <th colspan="2" scope="col">Handle</th>
            </tr>
        </thead>
        <tbody>

            @foreach(var item in Model)
            {
                <tr>
                    <th scope="row">@item.Id</th>
                    <td><img width="100" src=@item.Image /></td>
                    <td>@item.Name</td>
                    <td><a class="btn btn-success" asp-action="Update" asp-controller="Service" asp-route-id="@item.Id">UPDATE</a></td>
                    <td><a class="btn btn-danger" asp-action="Delete" asp-controller="Service" asp-route-id="@item.Id">DELETE</a></td>
                </tr>
            }
            
        </tbody>
    </table>

</div>
<!-- /.container-fluid -->